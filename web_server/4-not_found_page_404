#!/usr/bin/env bash
# This script configures Nginx to serve a custom 404 error page with the message "Ceci n'est pas une page".

# Update package list and install Nginx if not already installed
apt-get update
apt-get install -y nginx

# Create the custom 404 error page with the required message
echo "Ceci n'est pas une page" | sudo tee /etc/nginx/html/404.html

# Backup the default Nginx configuration file
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Edit the Nginx default configuration to set the custom 404 error page
sudo sed -i '/server_name _;/a \    error_page 404 /404.html;\n    location = /404.html {\n        root /etc/nginx/html;\n    }' /etc/nginx/sites-available/default

# Test the Nginx configuration for syntax errors
nginx -t

# If the test is successful, restart Nginx to apply changes
if [ $? -eq 0 ]; then
    sudo systemctl restart nginx
else
    echo "Nginx configuration test failed. Please check the config."
fi

# Verify by accessing a non-existent page using curl
curl -sI http://localhost/xyz

